###########################################
# GENERAL USER FUNCTIONS
###########################################

# These path functions check if a path is already present before adding it,
# which is useful for preventing elongated $PATHs filled with duplicates:

# Function to append to $PATH:
# path_append <NEW_PATH> => PATH=$PATH:<NEW_PATH>
function path_append() {
  for ARG in "$@"; do
    if [ -d "$ARG" ] && [[ ":$PATH:" != *":$ARG:"* ]]; then
        PATH="${PATH:+"$PATH:"}$ARG"
    fi
  done
}

# Function to prepend to $PATH:
# path_prepend <NEW_PATH> => PATH=<NEW_PATH>:$PATH
function path_prepend() {
  for ARG in "$@" ; do
    if [ -d "$ARG" ] && [[ ":$PATH:" != *":$ARG:"* ]]; then
        PATH="$ARG${PATH:+":$PATH"}"
    fi
  done
}

# Prepend a string to the output of a command:
# E.g.: cmd | prepend "[ERROR] "
function prepend() {
  while read line; do
    echo "${1}${line}"
  done
}

# Generate a timestamp:
function timestamp() {
  date +"%Y-%m-%d-%H%M"
}


